<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#C5BFBF"
    tools:openDrawer="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:title="Shotokan Karate WKF"
            app:titleTextColor="#ffffff">

        </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bannerad"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:id="@+id/linnfu"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/linncu"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gredient" />

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_effect">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="4dp"
                                    android:text="Special for you"
                                    android:textColor="#FFFFFF"
                                    android:textSize="22sp"
                                    android:textStyle="bold">

                                </TextView>

                                <ImageView

                                    android:id="@+id/imgvv"
                                    android:layout_width="400dp"
                                    android:layout_height="212dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/bunk" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgvv"
                                    android:layout_centerHorizontal="true"
                                    android:text="Kata in Details (Correction, Bunkai)"
                                    android:textColor="#FFFFFF"
                                    android:textSize="22sp"
                                    android:textStyle="bold">

                                </TextView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/kummitenew"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gredient" />

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_effect">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="4dp"
                                    android:text="Special Kumite for you"
                                    android:textColor="#FFFFFF"
                                    android:textSize="22sp"
                                    android:textStyle="bold">

                                </TextView>


                                <ImageView
                                    android:id="@+id/imgkumite"
                                    android:layout_width="400dp"
                                    android:layout_height="190dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="18dp"
                                    android:src="@drawable/kumimain" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgkumite"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="2dp"
                                    android:text="Basic to Advanced WKF Kumite"
                                    android:textColor="#FFFFFF"
                                    android:textSize="22sp"
                                    android:textStyle="bold">

                                </TextView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <LinearLayout

                        android:id="@+id/mainnew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linnfu"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:layout_marginBottom="25dp"
                            android:orientation="horizontal"

                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                app:cardCornerRadius="8dp"


                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gredient">

                                    <ImageView
                                        android:id="@+id/Imageview1"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/his"

                                        />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/Imageview1"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="HISTORY"
                                        android:textColor="#FFFFFF"
                                        android:textSize="22sp"
                                        android:textStyle="bold"

                                        />

                                    <Button
                                        android:id="@+id/btnhistory"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_effect"

                                        />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                app:cardCornerRadius="8dp"


                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gredient">

                                    <ImageView
                                        android:id="@+id/Imageview2"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/wkfrr"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/Imageview2"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="WKF RULL"
                                        android:textColor="#FFFFFF"
                                        android:textSize="22sp"
                                        android:textStyle="bold"

                                        />

                                    <Button
                                        android:id="@+id/btnwkfrull"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_effect"


                                        />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:layout_marginBottom="25dp"
                            android:orientation="horizontal"

                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                app:cardCornerRadius="8dp"


                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gredient">

                                    <ImageView
                                        android:id="@+id/Imageview3"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/bassic"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/Imageview3"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="BASIC"
                                        android:textColor="#FFFFFF"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/btnbasic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_effect"


                                        />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                app:cardCornerRadius="8dp"


                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gredient">

                                    <ImageView
                                        android:id="@+id/Imageview4"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/kata"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/Imageview4"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="KATA"
                                        android:textColor="#FFFFFF"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/btnkata"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_effect"


                                        />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"

                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                app:cardCornerRadius="8dp"

                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gredient">

                                    <ImageView
                                        android:id="@+id/Imageviewnun"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/kum"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/Imageviewnun"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="KUMITE"
                                        android:textColor="#FFFFFF"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/btnkumite"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_effect"

                                        />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                app:cardCornerRadius="8dp"

                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gredient">

                                    <ImageView
                                        android:id="@+id/Imageviewkumite"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/nun"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/Imageviewkumite"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="@string/nunchaku"
                                        android:textColor="#FFFFFF"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/btnnun"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_effect"


                                        />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </ScrollView>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/bannerad"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navdrawer"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/colorPrimary"
        app:menu="@menu/nav_item"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>