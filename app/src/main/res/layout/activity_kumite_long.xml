<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KumiteLong">


    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/hhhh"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:id="@+id/katas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Learn Kumite From Top Class Kumite Master (Junior Lefevre) In The World Who Also Trains Rafael Aghayev.
Please Watch Video ADS Because All Videos Are More Than 1 hour. And I only Earn For My Family And Also Bear My Educational Costs. Thank You ❤."
            android:textColor="#E91E63"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_above="@id/bannerad"
        android:layout_below="@id/hhhh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_marginTop="20dp"
                android:id="@+id/progressbar"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </ProgressBar>

            <androidx.recyclerview.widget.RecyclerView

                android:layout_width="match_parent"
                android:id="@+id/recyclek"
                android:paddingBottom="5dp"
                android:layout_height="match_parent"
                >
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.cardview.widget.CardView
                android:layout_below="@id/recyclek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/bannerad"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>


</RelativeLayout>

