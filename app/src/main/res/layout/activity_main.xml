<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#FDF4FF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/tool_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/threeline"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <TextView
                android:layout_marginStart="20dp"
                android:textSize="25sp"
                android:fontFamily="@font/blackitalic"
                android:textColor="@color/black"
                android:text="Shotokan Karate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


    <ScrollView
        android:layout_above="@+id/bannerad"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:scrollbars="none"
                    android:id="@+id/linnfu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:outlineSpotShadowColor="#000000"
                            android:outlineAmbientShadowColor="#000000"
                            android:id="@+id/linncu"
                            android:layout_width="170dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/ripple_effect"
                            android:orientation="vertical"
                            app:cardBackgroundColor="#AEFFB2"
                            app:cardCornerRadius="22dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gredient" />

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_effect">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="15dp"
                                    android:text="Special Kata"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/bold"
                                    android:textSize="16sp">

                                </TextView>

                                <ImageView
                                    android:layout_marginTop="25dp"
                                    android:id="@+id/imgvv"
                                    android:layout_width="140dp"
                                    android:layout_height="116dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/bunk" />

                                <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgvv"
                                    android:layout_centerHorizontal="true"
                                    android:text="Correction + Bunkai"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/bold"
                                    android:textSize="13sp">

                                </TextView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/kummitenew"
                            android:outlineSpotShadowColor="#000000"
                            android:outlineAmbientShadowColor="#000000"
                            android:layout_width="170dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ripple_effect"
                            android:orientation="vertical"
                            app:cardBackgroundColor="#FFDACE"
                            app:cardCornerRadius="22dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient2" />

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_effect">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="15dp"
                                    android:text="Special Kumite"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/bold"
                                    android:textSize="16sp">

                                </TextView>


                                <ImageView
                                    android:id="@+id/imgkumite"
                                    android:layout_width="140dp"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="18dp"
                                    android:src="@drawable/kumimain" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgkumite"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="2dp"
                                    android:text="Advanced WKF Kumite"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/bold"
                                    android:textSize="13sp">

                                </TextView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    app:cardCornerRadius="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/ripple_effect"
                    android:layout_below="@+id/linnfu"
                    android:gravity="center"
                    android:clickable="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/removeAds"
                    android:focusable="true">

                    <LinearLayout
                        android:background="@drawable/rounded_corner"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="ObsoleteLayoutParam,UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/crown"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:ignore="ContentDescription">

                        </ImageView>


                        <TextView

                            android:layout_margin="2dp"
                            android:id="@+id/aDS"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:fontFamily="@font/bold"
                            android:text="Remove Ads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/removeAds"
                    android:orientation="vertical"
                    android:id="@+id/mainnew">


                    <androidx.cardview.widget.CardView
                        android:layout_margin="15dp"
                        app:cardCornerRadius="15dp"
                        android:outlineSpotShadowColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/abc"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="7dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="10dp"


                                    >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#FF3C7F">

                                        <ImageView
                                            android:id="@+id/Imageview1"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/his" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/Imageview1"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:fontFamily="@font/bold"
                                            android:text="History"
                                            android:textColor="#FFFFFF"
                                            android:textSize="14sp"


                                            />

                                        <Button
                                            android:id="@+id/btnhistory"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/ripple_effect"

                                            tools:ignore="SpeakableTextPresentCheck" />
                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="7dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="10dp"


                                    >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#FF8C00">

                                        <ImageView
                                            android:id="@+id/Imageview2"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/wkfrr"

                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/Imageview2"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:fontFamily="@font/bold"
                                            android:text="WKF Rull"
                                            android:textColor="#FFFFFF"
                                            android:textSize="14sp"

                                            />

                                        <Button
                                            android:id="@+id/btnwkfrull"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/ripple_effect"


                                            tools:ignore="SpeakableTextPresentCheck" />
                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="7dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="10dp"


                                    >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#673AB7">

                                        <ImageView
                                            android:id="@+id/Imageview3"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/bassic"

                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/Imageview3"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:fontFamily="@font/bold"
                                            android:text="Basic"
                                            android:textColor="#FFFFFF"
                                            android:textSize="14sp" />

                                        <Button
                                            android:id="@+id/btnbasic"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/ripple_effect"


                                            tools:ignore="SpeakableTextPresentCheck" />
                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_below="@id/abc"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="horizontal"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="18dp"

                                >

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="10dp"


                                    >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#009688">

                                        <ImageView
                                            android:id="@+id/Imageview4"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/kata"

                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/Imageview4"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="Kata"
                                            android:textColor="#FFFFFF"
                                            android:fontFamily="@font/bold"
                                            android:textSize="14sp" />

                                        <Button
                                            android:id="@+id/btnkata"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/ripple_effect"


                                            tools:ignore="SpeakableTextPresentCheck" />
                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>



                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="7dp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="7dp"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="10dp"


                                    >
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#3F51B5">

                                        <ImageView
                                            android:id="@+id/Imageviewnun"
                                            android:layout_width="85dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/kum"

                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/Imageviewnun"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="Kumite"
                                            android:textColor="#FFFFFF"
                                            android:fontFamily="@font/bold"
                                            android:textSize="14sp" />

                                        <Button
                                            android:id="@+id/btnkumite"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/ripple_effect"

                                            tools:ignore="SpeakableTextPresentCheck" />
                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="10dp"


                                    >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#FF5722">

                                        <ImageView
                                            android:id="@+id/Imageviewkumite"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/nun"

                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/Imageviewkumite"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/nunchaku"
                                            android:textColor="#FFFFFF"
                                            android:fontFamily="@font/bold"
                                            android:textSize="14sp" />

                                        <Button
                                            android:id="@+id/btnnun"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/ripple_effect"


                                            tools:ignore="SpeakableTextPresentCheck" />
                                    </RelativeLayout>


                                </androidx.cardview.widget.CardView>



                            </LinearLayout>

                        </RelativeLayout>



                    </androidx.cardview.widget.CardView>



                </LinearLayout>





            </RelativeLayout>


        </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/bannerad"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>